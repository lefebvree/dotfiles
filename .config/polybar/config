menu-2-0-exec = sudo poweroff
menu-2-1 = CANCEL
menu-2-1-exec = menu-open-0

menu-3-0 = LOCK
menu-3-0-exec = /home/etienne/.scripts/suspend
menu-3-1 = CANCEL
menu-3-1-exec = menu-open-0

