#!/bin/sh

font="Fira Code 18"
bg_color="#111111"
fg_color="#111111"

bg_hl="#111111"
fg_hl="#111111"

width=800
lines=10

padding=10
border=2


rofi -show run -font "$font" -fg "$fg_color" -bg "$bg_color" -hlfg "$fg_hl" -hlbg "$bg_hl" -width $width -lines $lines -padding $padding -separator-style none -hide-scrollbar -bw $border -terminal hyper


